<h1>Welcome to the game</h1>


<div class="gameBoard">
  <table>
    <tbody>
      <% 8.times do |row| %>
        <tr>
          <% 8.times do |col|%>
            <% if (row+col) % 2 == 0 %>
              <td class="whiteSquare"></td>
            <% else %>
              <td class="blackSquare"></td>
            <% end %>        
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

          

